<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add to Collection</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<header>
  <%- include('partials/navbar', {page: '/lego/addSet' }) %>
</header>
<body>
    <div class="text-center">
    <p class="text-3xl font-bold mb-4">Add to Collection</p><br>
    <div class="container mx-auto text-center mt-10">
        <div class="grid grid-cols-1 gap-4 mt-8">
          <form action="/lego/addSet" method="POST" class="my-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required />
              </div>
              <div>
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required />
              </div>
              <div>
                <label for="num_parts">Number of Parts:</label>
                <input type="number" id="num_parts" name="num_parts" required />
              </div>
              <div>
                <label for="img_url">Image URL:</label>
                <input type="url" id="img_url" name="img_url" required />
              </div>
              <div>
                <label for="theme_id">Theme:</label>
                <select id="theme_id" name="theme_id" required>
                  <% themes.forEach(theme => { %>
                  <option value="<%= theme.id %>"><%= theme.name %></option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label for="set_num">Set Number:</label>
                <input type="text" id="set_num" name="set_num" required />
              </div>
            </div> <br>
            <button type="submit" class="btn btn-primary mt-4">Add to Collection</button>
          </form>
            </div>
        </div>
    </div>
</body>
</html>